{
    "name": "jackal/bin-locator",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Luca",
            "email": "luca.giacalone@edimotive.com"
        }
    ],
    "config": {
        "platform": {
            "php": "7.1"
        }
    },
    "autoload": {
        "psr-4": {
            "Jackal\\BinLocator\\": "src/",
            "Jackal\\BinLocator\\Test\\": "test/"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "echo Committing as $(git config user.name) [$(git config user.email)]",
                "vendor/bin/php-cs-fixer fix . --config=.php-cs"
            ],
            "pre-push": [
                "vendor/bin/phpunit tests/"
            ]
        }
    },
    "require": {
        "php": ">=7.1",
        "symfony/process": ">=3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5",
        "friendsofphp/php-cs-fixer": "^2.16",
        "brainmaestro/composer-git-hooks": "^2.8"
    }
}
